<Window x:Class="FurnitureShopWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FurnitureShopWPF"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        
        Title="LoginWindow" Height="330" Width="250">

    <Grid Background="White">

        <Label Content="LOGIN" FontSize="20" FontStyle="Oblique" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Width="74" Height="44"></Label>
        <TextBox x:Name="UserNameTextBox" Text="" HorizontalAlignment="Center" VerticalAlignment="Top" Width="128" Height="24" Margin="0,74,0,0" />
        <TextBox x:Name="PasswordTextBox" Text="" HorizontalAlignment="Center" VerticalAlignment="Top"  Width="128" Height="24" Margin="0,120,0,0"/>
        <Button x:Name="EnterButton" Content="Войти"  HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Margin="0,189,0,0" Width="90" Click="EnterButton_Click"/>
        <Button x:Name="GuestEnterButton" Content="Гостевой вход" HorizontalAlignment="Center" VerticalAlignment="Top" Height="33" Margin="0,240,0,0" Width="90" Click="GuestEnterButton_Click"></Button>

    </Grid>
</Window>
